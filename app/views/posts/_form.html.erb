<div class="container">
    <div class='text-center mt-6'>
      <h1 class = "text-2xl font-semibold">新規投稿</h1>
    </div>
      <%= form_with model: post do |f| %>

          <%= f.label :title, class: "label w-full md:w-1/2 mx-auto" %>
          <%= f.text_field :title, class: "input input-bordered input-accent form-control mb-6 w-full md:w-1/2 mx-auto", placeholder: "今日飲んだコーヒーにタイトルをつけましょう"  %>

          <%= f.label :body, class: "label w-full md:w-1/2 mx-auto" %>
          <%= f.text_area :body, class: "input input-bordered input-accent form-control mb-6 w-full md:w-1/2 mx-auto", rows: 5, style: "height: auto;", placeholder: "コーヒーの味、場所、一緒に飲んだ人などを記録しましょう" %>

          <%= f.label :drink_time, class: "label w-full md:w-1/2 mx-auto mb-6" %>
          <div class="mx-auto w-full md:w-1/2 text-center">
            <div class="tooltip" data-tip="morning">
                <span class="material-icons mr-3">wb_twilight</span>
            </div>
            <div class="rating">
                    <%= f.radio_button :drink_time, :morning,  name: "rating-1", class: 'mask mask-circle bg-sky-100 mr-3' %>
                    <%= f.radio_button :drink_time, :midmorning, name: "rating-1", class: 'mask mask-circle bg-sky-200 mr-3' %>
                    <%= f.radio_button :drink_time, :noon, name: "rating-1", class: 'mask mask-circle bg-sky-300 mr-3' %>
                    <%= f.radio_button :drink_time, :afternoon,  name: "rating-1",class: 'mask mask-circle bg-orange-400 mr-3' %>              
                    <%= f.radio_button :drink_time, :evening, name: "rating-1",class: 'mask mask-circle bg-sky-700 mr-3' %>
                    <%= f.radio_button :drink_time, :midnight, name: "rating-1",class: 'mask mask-circle bg-sky-800 mr-3' %>
            </div>
            <div class="tooltip" data-tip="midnight">
                <span class="material-icons">nights_stay</span>
            </div>
          </div>

          <%= f.label :drink_type, class: "label w-full md:w-1/2 mx-auto" %>
            <div class="mx-auto w-full md:w-1/2 text-center">
             <div class="vertical-align">
                <%= f.radio_button :drink_type,:hot,  class: "radio radio-secondary ml-6"%>
                <span class="material-icons">coffee</span>
                <%= f.radio_button :drink_type,:cold, class: "radio radio-primary ml-6" %>
                <span class="material-icons">ac_unit</span>
             </div>
            </div>
          
          <%= f.label :post_image, class: "label w-full md:w-1/2 mx-auto" %>
          <%= f.file_field :post_image, class:"file-input file-input-bordered file-input-accent form-control w-full md:w-1/2 mx-auto" %>
          <%= f.hidden_field :post_image_cache %>

        <div class="mx-auto md:w-1/2">
            <%= f.submit "投稿", class: "btn btn-primary w-full mt-6 mb-6" %>
        </div>
      <% end %>
      <div class='text-center mb-6'>
        <%= link_to '投稿一覧ページへ', posts_path %>
      </div>
  </div>
</div>